.devise-dialog-wrapper
  .modal-dialog.devise-dialog
    .modal-content.window-shadow
      .modal-header
        %h1.text-center.font-shadow.fw-br
          Sign up here
      .modal-body
        .mx-auto
          .col-xs-12
            = form_for(resource, as: resource_name, url: new_registration_path(resource_name)) do |f|
              = devise_error_messages!
              .form-group
                = f.text_field :first_name, :required => true, autofocus: true, class: "form-control", placeholder: "First name"
              .form-group
                = f.text_field :last_name, :required => true, autofocus: true, class: "form-control", placeholder: "Last name"
              .form-group
                = f.email_field :email, :required => true, autofocus: true, class: "form-control", placeholder: "Email"
              .form-group
                - if @minimum_password_length
                  %em
                    (#{@minimum_password_length} characters minimum)
                = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password"
              .form-group
                = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm password"
              .actions
                = f.submit "Sign up", class: "btn btn-primary btn-block"
            = render "devise/shared/links"
