.devise-dialog-wrapper
  .modal-dialog.devise-dialog
    .modal-content.window-shadow
      .modal-header
        %h1.text-center.font-shadow.fw-br Change password
      .modal-body
        .mx-auto
          .col-xs-12
            = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
              = devise_error_messages!
              = f.hidden_field :reset_password_token
              .form-group
                - if @minimum_password_length
                  %em
                    (#{@minimum_password_length} characters minimum)
                  %br/
                = f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "New Password"
              .form-group
                = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm password"
              .actions
                = f.submit "Change my password", class: "btn btn-primary btn-block btn-lg"
            = render "devise/shared/links"